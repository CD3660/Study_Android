<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scroll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="나의 당근"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/setting" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/app_main_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/profile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@id/profile"
                android:text="농성동 #3526967"
                android:textColor="@color/app_main_color" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_carrotpay">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="중고거래는 이제 당근페이로 해보세요!"
                android:textSize="15dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/top_menu_img1"
                    style="@style/top_menu_img"
                    android:src="@drawable/ic_top_menu1" />

                <TextView
                    style="@style/top_menu_txt"
                    android:layout_below="@id/top_menu_img1"
                    android:text="판매내역" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/top_menu_img2"
                    style="@style/top_menu_img"
                    android:src="@drawable/ic_top_menu2" />

                <TextView
                    style="@style/top_menu_txt"
                    android:layout_below="@id/top_menu_img2"
                    android:text="구매내역" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/top_menu_img3"
                    style="@style/top_menu_img"
                    android:src="@drawable/ic_top_menu3" />

                <TextView
                    style="@style/top_menu_txt"
                    android:layout_below="@id/top_menu_img3"
                    android:text="관심목록" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/app_main_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/owner_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:padding="10dp"
                android:text="사장님 메뉴"
                android:textSize="22dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/menu1"
                    style="@style/menu_img"
                    android:src="@drawable/ic_menu1" />

                <TextView
                    style="@style/menu_txt"
                    android:layout_alignTop="@id/menu1"
                    android:layout_toRightOf="@id/menu1"
                    android:text="비즈프로필 관리" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/menu2"
                    style="@style/menu_img"
                    android:src="@drawable/ic_menu2" />

                <TextView
                    style="@style/menu_txt"
                    android:layout_alignTop="@id/menu2"
                    android:layout_toRightOf="@id/menu2"
                    android:text="광고" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/app_main_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="나의 활동"
                android:textSize="22dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/menu3"
                    style="@style/menu_img"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_menu3" />

                <TextView
                    style="@style/menu_txt"
                    android:layout_alignTop="@id/menu3"
                    android:layout_toRightOf="@id/menu3"
                    android:text="내 동네 설정" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/menu4"
                    style="@style/menu_img"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_menu4" />

                <TextView
                    style="@style/menu_txt"
                    android:layout_alignTop="@id/menu4"
                    android:layout_toRightOf="@id/menu4"
                    android:text="동네 인증하기" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/menu5"
                    style="@style/menu_img"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_menu5" />

                <TextView
                    style="@style/menu_txt"
                    android:layout_alignTop="@id/menu5"
                    android:layout_toRightOf="@id/menu5"
                    android:text="키워드 알림" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/menu6"
                    style="@style/menu_img"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_menu4" />

                <TextView
                    style="@style/menu_txt"
                    android:layout_alignTop="@id/menu6"
                    android:layout_toRightOf="@id/menu6"
                    android:text="모아보기" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/menu7"
                    style="@style/menu_img"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_menu6" />

                <TextView
                    style="@style/menu_txt"
                    android:layout_alignTop="@id/menu7"
                    android:layout_toRightOf="@id/menu7"
                    android:text="당근가계부" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</ScrollView>